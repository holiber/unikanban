{
  "name": "unikanban",
  "version": "0.1.0",
  "description": "A Kanban board built with the Unapi pattern â€” self-documented, type-safe, transport-agnostic APIs.",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "dev:tui": "TSX_TSCONFIG_PATH=tsconfig.tui.json node --import tsx src/tui/main.tsx",
    "cli": "node --import tsx src/cli/main.ts",
    "mcp": "node --import tsx src/transports/mcp-main.ts",
    "http": "node --import tsx src/transports/http-main.ts",
    "build": "tsc",
    "build:app": "vite build",
    "build:ghpages": "node --import tsx scripts/generate-stats.ts && vite build && node --import tsx scripts/generate-stats.ts && vite build",
    "build:test-recordings": "node --import tsx scripts/generate-test-recordings-index.ts",
    "build:tui": "tsc -p tsconfig.tui.json",
    "test": "pnpm run build && jabtrunner all --allow-missing-project",
    "test:unit": "jabtrunner unit",
    "test:e2e": "pnpm run build && jabtrunner e2e --allow-missing-project",
    "test:scenario": "pnpm run build && jabtrunner scenario --allow-missing-project",
    "test:smoke": "pnpm run build && jabtrunner scenario --smoke --allow-missing-project",
    "test:coverage": "vitest run --coverage",
    "test:integration": "node -e \"console.log('No integration tests yet.')\""
  },
  "dependencies": {
    "ink": "^6.8.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "yargs": "^18.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@tailwindcss/vite": "^4.2.1",
    "@types/node": "^22",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/yargs": "^17",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^3.2.4",
    "jabtrunner": "https://github.com/holiber/jabterm/releases/download/jabtrunner-v0.1.0/jabtrunner-0.1.0.tgz",
    "tailwindcss": "^4.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vite": "^7.3.1",
    "vitest": "^3.2.0"
  },
  "packageManager": "pnpm@10.12.1",
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}